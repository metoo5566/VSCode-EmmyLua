{
    "name": "emmylua",
    "displayName": "EmmyLua",
    "description": "EmmyLua for vscode",
    "version": "0.2.7",
    "icon": "res/icon.png",
    "publisher": "tangzx",
    "engines": {
        "vscode": "^1.27.0"
    },
    "categories": [
        "Programming Languages",
        "Debuggers"
    ],
    "activationEvents": [
        "onLanguage:lua",
        "onDebug"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/EmmyLua/VSCode-EmmyLua"
    },
    "bugs": {
        "url": "https://github.com/EmmyLua/VSCode-EmmyLua/issues"
    },
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "emmy.restartServer",
                "title": "EmmyLua: Restart Lua Server"
            },
            {
                "command": "emmy.insertEmmyDebugCode",
                "title": "EmmyLua: Insert Emmy Debugger Code"
            }
        ],
        "snippets": [
            {
                "language": "lua",
                "path": "./snippets/snippets.json"
            }
        ],
        "languages": [
            {
                "id": "lua",
                "extensions": [
                    ".lua"
                ],
                "aliases": [
                    "EmmyLua"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lua",
                "scopeName": "source.lua",
                "path": "./syntaxes/lua.tmLanguage.json"
            }
        ],
        "breakpoints": [
            {
                "language": "lua"
            }
        ],
        "debuggers": [
            {
                "type": "emmylua_attach",
                "label": "EmmyLua Attach Debug",
                "program": "./out/debugger/EmmyAttachDebugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "attach": {
                        "required": [
                            "pid"
                        ],
                        "properties": {
                            "pid": {
                                "type": "number",
                                "description": "%debug.attach.target_pid%",
                                "default": 0
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "emmylua_attach",
                        "request": "attach",
                        "name": "%debug.attach.name%",
                        "pid": 0
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "%debug.attach.label%",
                        "description": "%debug.attach.desc%",
                        "body": {
                            "type": "emmylua_attach",
                            "request": "attach",
                            "name": "%debug.attach.name%",
                            "pid": 0
                        }
                    }
                ],
                "languages": [
                    "lua"
                ]
            },
            {
                "type": "emmylua_new",
                "label": "EmmyLua New Debugger",
                "program": "./out/debugger/EmmyDebugAdapter.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "host",
                            "port",
                            "ideConnectDebugger"
                        ],
                        "properties": {
                            "host": {
                                "type": "string",
                                "description": "host",
                                "default": "localhost"
                            },
                            "port": {
                                "type": "number",
                                "description": "port",
                                "default": 9966
                            },
                            "ideConnectDebugger": {
                                "type": "boolean",
                                "description": "连接方式",
                                "default": true
                            },
                            "ext": {
                                "type": "array",
                                "description": "Lua文件后缀",
                                "default": [
                                    ".lua"
                                ]
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "emmylua_new",
                        "request": "launch",
                        "name": "EmmyLua New Debug",
                        "host": "localhost",
                        "port": 9966,
                        "ext": [
                            ".lua",
                            ".lua.txt",
                            ".lua.bytes"
                        ],
                        "ideConnectDebugger": true
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "EmmyLua New Debug",
                        "description": "EmmyLua New Debug",
                        "body": {
                            "type": "emmylua_new",
                            "request": "launch",
                            "name": "EmmyLua New Debug",
                            "host": "localhost",
                            "port": 9966,
                            "ext": [
                                ".lua",
                                ".lua.txt",
                                ".lua.bytes"
                            ],
                            "ideConnectDebugger": true
                        }
                    }
                ],
                "languages": [
                    "lua"
                ]
            }
        ],
        "configuration": {
            "title": "EmmyLua",
            "properties": {
                "emmylua.java.home": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "%emmylua.java.home%"
                },
                "emmylua.source.roots": {
                    "type": [
                        "array"
                    ],
                    "default": [],
                    "description": "%emmylua.source.roots%"
                },
                "emmylua.completion.caseSensitive": {
                    "type": "boolean",
                    "default": false,
                    "description": "%emmylua.completion.caseSensitive%"
                },
                "emmylua.codeLens": {
                    "type": "boolean",
                    "default": false,
                    "description": "%emmylua.codeLens%"
                },
                "emmylua.debugger.defaultProgram": {
                    "type": "string",
                    "default": "lua",
                    "description": "%emmylua.debugger.defaultProgram%"
                },
                "emmylua.debugger.type": {
                    "type": "string",
                    "default": "lua",
                    "description": "调试类型",
                    "enum": [
                        "Cocos2",
                        "Cocos3",
                        "Unity"
                    ]
                },
                "emmylua.colors.parameter": {
                    "type": "string",
                    "default": "#99FFCC"
                },
                "emmylua.colors.global": {
                    "type": "string",
                    "default": "#FF6699"
                },
                "emmylua.colors.doc_type": {
                    "type": "string",
                    "default": "#66CCFF"
                }
            }
        },
        "configurationDefaults": {
            "[lua]": {
                "editor.quickSuggestions": {
                    "other": true,
                    "comments": true,
                    "strings": true
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "emmy.config.json",
                "url": "./syntaxes/emmy.config.schema.json"
            }
        ],
        "colors": []
    },
    "scripts": {
        "vscode:prepublish": "node ./build/prepare-version && npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "tslint": "^5.8.0",
        "typescript": "^4.0.2",
        "@types/vscode": "^1.27.0",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.1",
        "download": "^7.1.0",
        "filecopy": "^4.0.2"
    },
    "dependencies": {
        "vscode-languageclient": "5.1.0",
        "vscode-debugadapter": "1.31.0",
        "vscode-debugprotocol": "1.31.0",
        "lua-fmt": "^2.6.0",
        "smart-buffer": "^4.0.1",
        "iconv-lite": "^0.5.0"
    }
}
